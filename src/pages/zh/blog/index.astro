---
import Layout from '@layouts/Layout.astro';
import { sanityClient } from 'sanity:client';

// 中国語(zh)の記事を全て取得するように修正
const posts = await sanityClient.fetch(`*[_type == "post" && language == "zh"]`);
---

<Layout title="博客 | Omiseweb" description="这是Omiseweb的博客文章列表。">
  <div class="max-w-4xl mx-auto px-6 py-20">
    <h1 class="text-4xl font-bold mb-8">博客</h1>
    <ul class="space-y-4">
      {posts.map(post => (
        <li>
          <a href={`/zh/blog/${post.slug.current}`} class="text-2xl font-semibold text-indigo-600 hover:underline">
            {post.title}
          </a>
        </li>
      ))}
    </ul>
  </div>
</Layout>
