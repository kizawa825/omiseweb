---
import Layout from '../layouts/Layout.astro';
import Cta from '../components/Cta.astro';
import content from '../data/jp.json';
const pageContent = content.pricePage;
---

<Layout
  title={`${pageContent.title} | Omiseweb`}
  description={pageContent.description}
  headerContent={content.header}
  footerContent={content.footer}
>
  <section class="bg-white py-20 sm:py-24">
    <div class="max-w-7xl mx-auto px-6 text-center">
      <p class="text-base font-semibold leading-7 text-primary-600">{pageContent.eyebrow}</p>
      <h1 class="text-4xl md:text-5xl font-bold text-neutral-900">{pageContent.title}</h1>
      <p class="mt-4 max-w-2xl mx-auto text-lg leading-8 text-neutral-600">
        {pageContent.description}
      </p>
    </div>
  </section>

  <section class="py-20 sm:py-24 bg-neutral-50">
    <div class="max-w-7xl mx-auto px-6">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-10 items-stretch">
        
        {pageContent.plans.map(plan => (
          <div class:list={[
            "flex flex-col bg-white rounded-2xl p-8 transition-all duration-300",
            {
              "border border-neutral-200 shadow-lg hover:shadow-strong": !plan.recommended,
              "border-2 border-primary-500 shadow-2xl lg:scale-105": plan.recommended
            }
          ]}>
            {plan.recommended && (
              <div class="text-center mb-5">
                <span class="bg-primary-100 text-primary-700 text-sm font-semibold px-4 py-1.5 rounded-full">一番人気</span>
              </div>
            )}
            <h2 class="text-2xl font-bold text-neutral-900">{plan.name}</h2>
            <p class="mt-2 text-neutral-600 text-sm h-12">{plan.description}</p>
            <div class="mt-6">
              <span class="text-4xl font-extrabold text-neutral-900">{plan.price}</span>
              <span class="text-lg font-medium text-neutral-500 ml-1">{plan.currency}</span>
            </div>
            <ul class="mt-8 space-y-4 text-neutral-600 flex-grow">
              {plan.features.map(feature => (
                <li class="flex items-start">
                  <svg class="w-5 h-5 text-success-500 mr-2 flex-shrink-0 mt-0.5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" /></svg>
                  <span>{feature}</span>
                </li>
              ))}
            </ul>
            <div class="mt-10">
              <a href="#contact" class:list={[
                "block w-full text-center font-semibold py-3.5 rounded-full transition-all duration-300 transform hover:scale-105",
                {
                  "bg-primary-600 text-white hover:bg-primary-700 shadow-md hover:shadow-lg": plan.recommended,
                  "bg-neutral-100 text-neutral-700 hover:bg-neutral-200": !plan.recommended
                }
              ]}>
                {plan.cta}
              </a>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="py-20 sm:py-24 bg-white">
    <div class="max-w-7xl mx-auto px-6">
        <div class="text-center mb-12">
            <h2 class="text-3xl font-bold text-neutral-900">{pageContent.featureComparison.title}</h2>
        </div>
        <div class="overflow-x-auto rounded-lg border border-neutral-200 shadow-subtle">
            <table class="w-full min-w-max text-left">
                <thead>
                    <tr class="border-b border-neutral-200 bg-neutral-50">
                         <th class="p-4 font-bold text-neutral-800 text-base">{pageContent.featureComparison.headers[0]}</th>
                        <th class="p-4 text-center font-bold text-neutral-800 text-base">{pageContent.featureComparison.headers[1]}</th>
                        <th class="p-4 text-center font-bold text-primary-700 text-base bg-primary-50 rounded-t-lg">{pageContent.featureComparison.headers[2]}</th>
                         <th class="p-4 text-center font-bold text-neutral-800 text-base">{pageContent.featureComparison.headers[3]}</th>
                    </tr>
                </thead>
                <tbody>
                    {pageContent.featureComparison.rows.map((item, index) => (
                     <tr class={`border-b border-neutral-200 ${index % 2 === 0 ? 'bg-white' : 'bg-neutral-50/50'}`}>
                            <td class="p-4 font-semibold text-neutral-700">{item.feature}</td>
                            <td class="p-4 text-center text-neutral-600">{item.start}</td>
                            <td class="p-4 text-center text-primary-800 font-medium bg-primary-50">{item.standard}</td>
                             <td class="p-4 text-center text-neutral-600">{item.premium}</td>
                        </tr>
                    ))}
                </tbody>
            </table>
        </div>
    </div>
  </section>

  <section class="py-20 sm:py-24 bg-neutral-50">
    <div class="max-w-4xl mx-auto px-6">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-neutral-900">{pageContent.options.title}</h2>
        <p class="mt-2 text-lg leading-8 text-neutral-600">{pageContent.options.description}</p>
      </div>
      <div class="space-y-4">
        {pageContent.options.items.map(option => (
            <div class="bg-white border border-neutral-200 p-6 rounded-lg shadow-subtle transition-all duration-300 hover:shadow-lg">
                 <h3 class="font-semibold text-lg text-neutral-800">{option.name}</h3>
                <p class="mt-1 text-neutral-600">{option.description}</p>
            </div>
        ))}
      </div>
    </div>
  </section>
  
  <Cta content={content.cta} />
</Layout>
