---
import Layout from '../../layouts/Layout.astro';
import Hero from '../../components/Hero.astro';
import Problem from '../../components/Problem.astro';
import Solution from '../../components/Solution.astro';
import Works from '../../components/Works.astro';
import Testimonials from '../../components/Testimonials.astro';
import Process from '../../components/Process.astro';
import Faq from '../../components/Faq.astro';
import Cta from '../../components/Cta.astro';
// 英語のコンテンツデータをインポート
import content from '../../data/en.json';
---

<Layout
	title="Omiseweb | We deliver your wonderful shop to fans in Japan."
	description="For foreign restaurant and salon owners working hard in Japan. A fully custom-made website strong in attracting customers, at a surprisingly low price."
    headerContent={content.header}
    footerContent={content.footer}
>
	<Hero content={content.hero} />
	<Problem content={content.problem} />
	<Solution content={content.solution} />
	<Works content={content.works} />
	<Testimonials content={content.testimonials} />
	<Process content={content.process} />
	<Faq content={content.faq} />
	<Cta id="contact" content={content.cta} />
</Layout>
