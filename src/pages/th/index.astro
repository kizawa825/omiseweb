---
import Layout from '../../layouts/Layout.astro';
import Hero from '../../components/Hero.astro';
import Problem from '../../components/Problem.astro';
import Solution from '../../components/Solution.astro';
import Works from '../../components/Works.astro';
import Testimonials from '../../components/Testimonials.astro';
import Process from '../../components/Process.astro';
import Faq from '../../components/Faq.astro';
import Cta from '../../components/Cta.astro';
// タイ語のコンテンツデータをインポート
import content from '../../data/th.json';
---

<Layout
	title="Omiseweb | เราส่งต่อร้านค้าที่ยอดเยี่ยมของคุณไปยังแฟนๆ ในญี่ปุ่น"
	description="สำหรับเจ้าของร้านอาหารและซาลอนชาวต่างชาติที่ทำงานอย่างหนักในญี่ปุ่น เว็บไซต์ที่สร้างขึ้นเองอย่างสมบูรณ์ซึ่งแข็งแกร่งในการดึงดูดลูกค้าในราคาที่ต่ำอย่างน่าประหลาดใจ"
    headerContent={content.header}
    footerContent={content.footer}
>
	<Hero content={content.hero} />
	<Problem content={content.problem} />
	<Solution content={content.solution} />
	<Works content={content.works} />
	<Testimonials content={content.testimonials} />
	<Process content={content.process} />
	<Faq content={content.faq} />
	<Cta id="contact" content={content.cta} />
</Layout>
