---
import Layout from '@layouts/Layout.astro';
import { sanityClient } from 'sanity:client';

// タイ語(th)の記事を全て取得するように修正
const posts = await sanityClient.fetch(`*[_type == "post" && language == "th"]`);
---

<Layout title="บล็อก | Omiseweb" description="นี่คือรายการบล็อกโพสต์จาก Omiseweb">
  <div class="max-w-4xl mx-auto px-6 py-20">
    <h1 class="text-4xl font-bold mb-8">บล็อก</h1>
    <ul class="space-y-4">
      {posts.map(post => (
        <li>
          <a href={`/th/blog/${post.slug.current}`} class="text-2xl font-semibold text-indigo-600 hover:underline">
            {post.title}
          </a>
        </li>
      ))}
    </ul>
  </div>
</Layout>
