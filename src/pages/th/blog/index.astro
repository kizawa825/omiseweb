---
import Layout from '../../../layouts/Layout.astro';
import { sanityClient } from '../../../sanity/client';

const posts = await sanityClient.fetch(`*[_type == "post" && language == "th"]`);
---

<Layout title="Blog | Omiseweb" description="Omiseweb Blog">
  <div class="max-w-4xl mx-auto px-6 py-20">
    <h1 class="text-4xl font-bold mb-8">Blog</h1>
    <ul class="space-y-4">
      {posts.map(post => (
        <li>
          <a href={`/th/blog/${post.slug.current}`} class="text-2xl font-semibold text-indigo-600 hover:underline">
            {post.title}
          </a>
        </li>
      ))}
    </ul>
  </div>
</Layout>
