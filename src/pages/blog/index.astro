---
import Layout from '../../layouts/Layout.astro';
import { sanityClient } from '../../sanity/client';

const posts = await sanityClient.fetch(`*[_type == "post" && language == "ja"]`);
---

<Layout title="ブログ | Omiseweb" description="Omisewebのブログ記事一覧です。">
  <div class="max-w-4xl mx-auto px-6 py-20">
    <h1 class="text-4xl font-bold mb-8">ブログ</h1>
    <ul class="space-y-4">
      {posts.map(post => (
        <li>
          <a href={`/blog/${post.slug.current}`} class="text-2xl font-semibold text-indigo-600 hover:underline">
            {post.title}
          </a>
        </li>
      ))}
    </ul>
  </div>
</Layout>
