---
import Layout from '../../layouts/Layout.astro';
import { sanityClient } from 'sanity:client';
import { sanityPortableText } from '../../sanity/portableText';


const { slug } = Astro.params;
const post = await sanityClient.fetch(`*[_type == "post" && slug.current == $slug][0]`, { slug });
---

<Layout 
  title={`${post.title} | Omiseweb`}
  description={post.excerpt}>
  <div class="max-w-4xl mx-auto px-6 py-20">
    <h1 class="text-4xl font-bold mb-4">{post.title}</h1>
    <div class="prose lg:prose-xl mt-8">
      <Fragment set:html={sanityPortableText(post.body)} />
    </div>
  </div>
</Layout>
