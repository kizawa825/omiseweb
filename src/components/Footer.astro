---
const defaultContent = {
  description: "日本のファンに、あなたのお店を届ける。",
  navigation: "ナビゲーション",
  navLinks: [
    { name: "トップ", href: "/" },
    { name: "私たちについて", href: "/about" },
    { name: "制作事例", href: "/works" },
    { name: "料金プラン", href: "/price" },
    { name: "ブログ", href: "/blog" }
  ],
  supportedLanguages: "対応言語",
  languages: ["日本語", "English", "中文", "ภาษาไทย"],
  contact: "お問い合わせ",
  contactButton: "無料相談はこちら",
  copyright: "© 2025 Omiseweb. All rights reserved."
};

const { content = defaultContent } = Astro.props;
const navLinks = Array.isArray(content?.navLinks) ? content.navLinks : [];
const languages = Array.isArray(content?.languages) ? content.languages : [];
const currentYear = new Date().getFullYear();
---

<!-- 2025年最新のフッターデザイン：DaisyUI統合で高級感を演出 -->
<footer class="footer footer-center p-10 bg-base-200 text-base-content relative overflow-hidden">
  
  <!-- 背景装飾 -->
  <div class="absolute inset-0 overflow-hidden">
    <div class="absolute top-0 left-1/4 w-96 h-96 bg-gradient-to-br from-primary/10 to-secondary/10 rounded-full opacity-50 animate-pulse-slow"></div>
    <div class="absolute bottom-0 right-1/4 w-72 h-72 bg-gradient-to-br from-accent/10 to-primary/10 rounded-full opacity-50 animate-pulse-slow" style="animation-delay: 2s;"></div>
  </div>

  <div class="relative z-10 max-w-7xl mx-auto">
    
    <!-- メインコンテンツエリア -->
    <div class="grid grid-cols-1 lg:grid-cols-4 gap-12 lg:gap-16 mb-12">
      
      <!-- ブランドエリア -->
      <div class="lg:col-span-2 space-y-6">
        <!-- ロゴとブランド -->
        <div class="flex items-center space-x-3">
          <div class="w-10 h-10 luxury-gradient rounded-xl flex items-center justify-center shadow-lg">
            <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"/>
            </svg>
          </div>
          <span class="text-2xl font-bold text-base-content font-heading">Omiseweb</span>
        </div>
        
        <!-- 説明文 -->
        <p class="text-lg text-base-content/70 leading-relaxed max-w-md">
          {content.description}
        </p>
        
        <!-- 特徴バッジ -->
        <div class="flex flex-wrap gap-3">
          <div class="badge badge-primary badge-lg glass-effect">
            <div class="w-2 h-2 bg-accent rounded-full mr-2 animate-pulse"></div>
            完全オーダーメイド
          </div>
          <div class="badge badge-secondary badge-lg glass-effect">
            <div class="w-2 h-2 bg-accent rounded-full mr-2 animate-pulse"></div>
            多言語対応
          </div>
          <div class="badge badge-accent badge-lg glass-effect">
            <div class="w-2 h-2 bg-success rounded-full mr-2 animate-pulse"></div>
            SEO/MEO対策
          </div>
        </div>
      </div>
      
      <!-- ナビゲーション -->
      <div class="space-y-6">
        <h4 class="footer-title text-lg font-semibold text-base-content">{content.navigation}</h4>
        <ul class="space-y-3">
          {navLinks.map((item) => (
            <li>
              <a 
                href={item.href} 
                class="link link-hover text-base-content/70 hover:text-primary-600 hover:translate-x-1 transition-all duration-300"
              >
                {item.name}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- 言語とコンタクト -->
      <div class="space-y-6">
        <h4 class="footer-title text-lg font-semibold text-base-content">{content.supportedLanguages}</h4>
        <ul class="space-y-3">
          {languages.map((lang) => (
            <li class="text-base-content/70">{lang}</li>
          ))}
        </ul>
        
        <!-- CTAボタン -->
        <div class="pt-4">
          <a 
            href="#contact" 
            class="btn btn-primary btn-lg"
          >
            <span>{content.contactButton}</span>
            <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </a>
        </div>
      </div>
    </div>
    
    <!-- ボトムエリア -->
    <div class="divider"></div>
    <div class="flex flex-col sm:flex-row justify-between items-center space-y-4 sm:space-y-0">
      
      <!-- コピーライト -->
      <p class="text-sm text-base-content/50">
        &copy; {currentYear} Omiseweb. All rights reserved.
      </p>
      
      <!-- コンタクト情報 -->
      <div class="flex items-center space-x-4">
        <div class="text-sm text-base-content/50">
          お問い合わせ: 
          <a href="mailto:info@omiseweb.com" class="link link-primary">
            info@omiseweb.com
          </a>
        </div>
      </div>
    </div>
  </div>
  
  <!-- 装飾的な要素 -->
  <div class="absolute bottom-0 left-0 w-full h-1 luxury-gradient"></div>
</footer>
