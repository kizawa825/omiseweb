---
const { content } = Astro.props;
---

<!-- 2025年最新のSolutionセクション：権威性とプロフェッショナル感を演出 -->
<section class="relative py-20 lg:py-32 bg-gradient-to-br from-white via-primary-50/30 to-neutral-50/50 overflow-hidden">
  
  <!-- 背景装飾 -->
  <div class="absolute inset-0 overflow-hidden">
    <div class="absolute top-1/2 right-0 w-96 h-96 bg-gradient-primary rounded-full opacity-5 animate-pulse-slow transform translate-x-1/2 -translate-y-1/2"></div>
    <div class="absolute bottom-0 left-0 w-72 h-72 bg-gradient-accent rounded-full opacity-5 animate-pulse-slow" style="animation-delay: 1.5s;"></div>
  </div>

  <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    
    <!-- セクションヘッダー -->
    <div class="text-center max-w-4xl mx-auto mb-16 lg:mb-20">
      <div class="inline-flex items-center px-4 py-2 bg-gradient-accent/10 rounded-full text-sm font-semibold text-accent-700 mb-6">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        私たちの強み
      </div>
      
      <h2 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-neutral-900 mb-6">
        <span class="gradient-text">{content.title}</span>
      </h2>
      
      <p class="text-lg sm:text-xl text-neutral-600 leading-relaxed">
        {content.subtitle}
      </p>
    </div>

    <!-- ソリューションカードグリッド -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12">
      {content.solutions.map((solution, index) => (
        <div class="group relative">
          <!-- カード背景のグロー効果 -->
          <div class="absolute -inset-2 bg-gradient-primary rounded-3xl opacity-0 group-hover:opacity-20 transition-opacity duration-500 blur-xl"></div>
          
          <!-- メインカード -->
          <div class="relative bg-white/90 backdrop-blur-sm rounded-3xl shadow-intense overflow-hidden transform group-hover:scale-105 transition-all duration-500">
            
            <!-- 画像エリア -->
            <div class="aspect-[16/10] relative overflow-hidden">
              <img 
                src={solution.image} 
                alt={solution.title}
                class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
              />
              
              <!-- オーバーレイグラデーション -->
              <div class="absolute inset-0 bg-gradient-to-t from-black/30 via-transparent to-transparent"></div>
              
              <!-- フローティングバッジ -->
              <div class="absolute top-6 left-6 bg-white/90 backdrop-blur-sm rounded-2xl px-4 py-2 shadow-lg">
                <div class="flex items-center space-x-2">
                  <div class="w-2 h-2 bg-gradient-accent rounded-full animate-pulse"></div>
                  <span class="text-sm font-semibold text-neutral-700">強み {index + 1}</span>
                </div>
              </div>
            </div>
            
            <!-- コンテンツエリア -->
            <div class="p-6 lg:p-8">
              <div class="space-y-4">
                <!-- サブタイトル -->
                <div class="inline-flex items-center px-3 py-1 bg-gradient-primary/10 rounded-full text-sm font-semibold text-primary-700">
                  {solution.subtitle}
                </div>
                
                <!-- メインタイトル -->
                <h3 class="text-2xl lg:text-3xl font-bold text-neutral-900 leading-tight">
                  {solution.title}
                </h3>
                
                <!-- 説明文 -->
                <p class="text-neutral-600 leading-relaxed text-lg">
                  {solution.description}
                </p>
                
                <!-- 装飾的な要素 -->
                <div class="flex items-center space-x-2 pt-4">
                  <div class="w-8 h-0.5 bg-gradient-primary rounded-full"></div>
                  <div class="w-4 h-0.5 bg-gradient-primary/50 rounded-full"></div>
                  <div class="w-2 h-0.5 bg-gradient-primary/30 rounded-full"></div>
                </div>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- ボトムCTA -->
    <div class="text-center mt-16 lg:mt-20">
      <div class="inline-flex items-center px-8 py-4 bg-gradient-primary text-white font-semibold rounded-2xl shadow-lg hover:shadow-glow hover:scale-105 transition-all duration-300 transform">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
        </svg>
        これらの強みで、あなたのビジネスを成功に導きます
      </div>
    </div>
  </div>
</section>

<script>
  // スクロールアニメーション
  document.addEventListener('DOMContentLoaded', () => {
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -100px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry, index) => {
        if (entry.isIntersecting) {
          // 遅延アニメーションで順次表示
          setTimeout(() => {
            entry.target.classList.add('animate-fade-in-up');
          }, index * 200);
        }
      });
    }, observerOptions);

    // カード要素を監視
    const cards = document.querySelectorAll('.group');
    cards.forEach(card => {
      card.classList.add('animate-on-scroll');
      observer.observe(card);
    });
  });
</script>
