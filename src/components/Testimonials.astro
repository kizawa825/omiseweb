---
const { content } = Astro.props;
---
<section class="py-20 sm:py-24">
  <div class="max-w-7xl mx-auto px-6">
    <div class="text-center">
        <h2 class="text-3xl font-bold tracking-tight text-slate-900 sm:text-4xl">{content.title}</h2>
        <p class="mt-4 text-lg leading-8 text-slate-600">{content.subtitle}</p>
    </div>

    <div class="swiper testimonials-swiper mt-12">
        <div class="swiper-wrapper py-4">
            {content.voices.map(testimonial => (
                <div class="swiper-slide">
                    <figure class="rounded-2xl bg-slate-50 p-8 text-sm leading-6 h-full shadow-sm">
                        <blockquote class="text-slate-900">
                            <p>“{testimonial.quote}”</p>
                        </blockquote>
                        <figcaption class="mt-6 flex items-center gap-x-4">
                            <img class="h-10 w-10 rounded-full bg-slate-50 object-cover" src={testimonial.image} alt={testimonial.name}>
                            <div>
                                <div class="font-semibold text-slate-900">{testimonial.name}</div>
                                <div class="text-slate-600">{testimonial.role}</div>
                            </div>
                        </figcaption>
                    </figure>
                </div>
            ))}
        </div>
        <div class="swiper-pagination testimonials-pagination"></div>
    </div>
  </div>
</section>