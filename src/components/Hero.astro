---
const { content } = Astro.props;
const { pathname } = Astro.url;

const lang = pathname.split('/')[1];
const supportedLangs = ['en', 'th', 'zh'];
const currentLang = supportedLangs.find((code) => code === lang);
const priceLink = currentLang ? `/${currentLang}/price` : '/price';

const [eyebrowHeadlineRaw, ...headlineRestParts] = content.catchphrase.split('、');
const hasSplit = headlineRestParts.length > 0;
const eyebrowHeadline = hasSplit ? eyebrowHeadlineRaw : 'Omiseweb Studio';
const mainHeadline = hasSplit ? headlineRestParts.join('、') : content.catchphrase;

const defaultTrustMetrics = [
  { label: 'リピート率', value: '97%' },
  { label: '予約数改善', value: '+168%' },
  { label: '制作期間', value: '4 Weeks' },
];

const trustMetrics = Array.isArray(content?.trustMetrics) ? content.trustMetrics : defaultTrustMetrics;

const beforeAfterCard = {
  label: content?.beforeAfter?.label ?? 'Before → After',
  description:
    content?.beforeAfter?.description ??
    '集客導線・多言語導線を設計し、売上に直結する体験を構築します。',
};

const insightCard = {
  label: content?.insightCard?.label ?? 'Insight',
  description:
    content?.insightCard?.description ??
    '日本人デザイナーとグローバルマーケターが、文化背景まで深掘り。',
};

const resultCard = {
  label: content?.resultCard?.label ?? 'Result',
  description:
    content?.resultCard?.description ??
    '公開翌月から予約数1.5倍。口コミ導線とSEO/MEOで長期的に効果を持続。',
};
---
<section class="relative overflow-hidden bg-[radial-gradient(circle_at_top,_rgba(99,102,241,0.08),_transparent_60%)] py-20 sm:py-28 lg:py-36">
  <div class="pointer-events-none absolute inset-0">
    <div class="absolute -top-24 right-[12%] h-72 w-72 rounded-full bg-secondary/20 blur-[140px]"></div>
    <div class="absolute bottom-0 left-[8%] h-[420px] w-[420px] rounded-full bg-accent/15 blur-[180px]"></div>
    <div class="absolute inset-x-0 bottom-0 h-32 bg-gradient-to-t from-white to-transparent"></div>
  </div>

  <div class="relative mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="grid items-center gap-16 lg:grid-cols-12">
      <div class="space-y-10 lg:col-span-6">
        <div class="inline-flex items-center gap-2 rounded-full border border-primary/30 bg-primary/10 px-4 py-2 text-xs font-semibold uppercase tracking-[0.38em] text-primary-700">
          2025 Premium Launch Program
        </div>

        <div class="space-y-6">
          <h1 class="text-4xl font-bold leading-tight tracking-tight text-neutral-900 sm:text-5xl lg:text-6xl">
            <span class="block text-base font-semibold uppercase tracking-[0.5em] text-primary-500">
              {eyebrowHeadline}
            </span>
            <span class="mt-4 block bg-gradient-to-r from-neutral-900 via-primary-700 to-secondary-600 bg-clip-text text-transparent">
              {mainHeadline}
            </span>
          </h1>
          <p class="text-lg leading-relaxed text-neutral-600 sm:text-xl">
            {content.subcopy}
          </p>
        </div>

        <div class="flex flex-col gap-4 sm:flex-row sm:items-center">
          <a
            href="#contact"
            class="group inline-flex w-full items-center justify-between rounded-2xl bg-gradient-to-r from-primary to-secondary px-7 py-4 text-base font-semibold text-white shadow-glow transition duration-300 hover:shadow-strong sm:w-auto"
          >
            <span>{content.cta_main}</span>
            <svg
              class="h-5 w-5 transition duration-300 group-hover:translate-x-1"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
            >
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
          <a
            href={priceLink}
            class="inline-flex items-center justify-center gap-2 rounded-2xl border border-neutral-300/70 bg-white/80 px-6 py-4 text-base font-semibold text-neutral-800 shadow-subtle transition duration-300 hover:border-primary/40 hover:text-primary-600"
          >
            {content.cta_sub}
            <svg
              class="h-5 w-5"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
            >
              <path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5-5 5"></path>
            </svg>
          </a>
        </div>

        <div class="flex flex-wrap items-center gap-3 text-sm text-neutral-600">
          {content.features.map((feature) => (
            <span class="inline-flex items-center gap-2 rounded-full border border-neutral-200 bg-white/70 px-4 py-2 shadow-subtle backdrop-blur-sm transition duration-300 hover:border-primary/40 hover:text-primary-600">
              <svg class="h-4 w-4 text-primary-500" viewBox="0 0 20 20" fill="currentColor">
                <path
                  fill-rule="evenodd"
                  d="M16.707 5.293a1 1 0 00-1.414-1.414L8 11.172 4.707 7.879a1 1 0 10-1.414 1.414l4 4a1 1 0 001.414 0l8-8z"
                  clip-rule="evenodd"
                ></path>
              </svg>
              {feature}
            </span>
          ))}
        </div>

        <div class="grid gap-4 sm:grid-cols-3">
          {trustMetrics.map((metric) => (
            <div class="rounded-2xl border border-neutral-200/60 bg-white/70 p-4 backdrop-blur-sm shadow-subtle">
              <p class="text-xs uppercase tracking-[0.28em] text-neutral-400">{metric.label}</p>
              <p class="mt-3 text-2xl font-semibold text-neutral-900 sm:text-3xl">{metric.value}</p>
            </div>
          ))}
        </div>
      </div>

      <div class="relative lg:col-span-6">
        <div class="relative mx-auto max-w-xl">
          <div class="absolute -left-8 top-12 hidden max-w-[180px] rounded-2xl border border-primary/30 bg-white/80 p-4 shadow-subtle backdrop-blur-sm lg:block">
            <p class="text-xs uppercase tracking-[0.32em] text-primary-500">{beforeAfterCard.label}</p>
            <p class="mt-3 text-sm font-medium text-neutral-700">
              {beforeAfterCard.description}
            </p>
          </div>

          <div class="absolute -right-12 top-6 hidden rounded-3xl border border-secondary/30 bg-white/80 p-5 shadow-strong backdrop-blur-lg lg:block">
            <p class="text-xs uppercase tracking-[0.32em] text-secondary-600">Launch Score</p>
            <p class="mt-2 text-3xl font-semibold text-secondary-500">96/100</p>
            <p class="text-xs text-neutral-500">Performance Lab 2025</p>
          </div>

          <div class="relative overflow-hidden rounded-[2.5rem] border border-neutral-200 bg-white/80 p-6 shadow-strong backdrop-blur">
            <div class="relative overflow-hidden rounded-[2rem] border border-white/50">
              <img
                src="https://images.unsplash.com/photo-1521737604893-d14cc237f11d?auto=format&fit=crop&w=1600&q=80"
                alt="Omiseweb bespoke website preview"
                class="h-full w-full object-cover"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-neutral-900/60 via-neutral-900/10 to-transparent"></div>
              <div class="absolute bottom-6 left-6 right-6 flex items-center justify-between rounded-2xl border border-white/20 bg-white/10 px-4 py-3 text-white backdrop-blur">
                <div>
                  <p class="text-xs uppercase tracking-[0.28em] text-white/60">Omiseweb Experience</p>
                  <p class="mt-1 text-lg font-semibold">Immersive Storytelling</p>
                </div>
                <svg class="h-5 w-5 text-white/70" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7"></path>
                </svg>
              </div>
            </div>

            <div class="mt-6 grid gap-4 md:grid-cols-2">
              <div class="rounded-2xl border border-white/20 bg-white/70 p-4 text-sm text-neutral-700 shadow-subtle">
                <p class="text-xs uppercase tracking-[0.32em] text-neutral-400">{insightCard.label}</p>
                <p class="mt-2 font-semibold">
                  {insightCard.description}
                </p>
              </div>
              <div class="rounded-2xl border border-white/20 bg-neutral-900 text-white p-4 text-sm shadow-subtle">
                <p class="text-xs uppercase tracking-[0.32em] text-primary-200">{resultCard.label}</p>
                <p class="mt-2 font-semibold">
                  {resultCard.description}
                </p>
              </div>
            </div>
          </div>

          <div class="absolute -bottom-16 left-1/2 hidden w-36 -translate-x-1/2 rounded-3xl border border-neutral-200/70 bg-white/75 p-4 text-center text-xs font-semibold uppercase tracking-[0.32em] text-neutral-400 shadow-subtle sm:block">
            Trusted · Tokyo / Bangkok / Taipei
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
