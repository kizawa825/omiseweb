---
const { content } = Astro.props;
const { pathname } = Astro.url;

// 現在のパスから言語コードを取得
const lang = pathname.split('/')[1];
const supportedLangs = ['en', 'th', 'zh'];
const currentLang = supportedLangs.find(l => l === lang);

// priceページのリンクを生成
const priceLink = currentLang ?
`/${currentLang}/price` : '/price';
---

<!-- 2025年最新のヒーローセクション：DaisyUI統合で高級感を演出 -->
<section class="relative min-h-screen flex items-center justify-center overflow-hidden bg-gradient-to-br from-base-100 via-primary/5 to-secondary/5">
  
  <!-- 背景装飾：DaisyUI統合の幾何学的パターン -->
  <div class="absolute inset-0 overflow-hidden">
    <!-- メインの幾何学パターン -->
    <div class="absolute top-0 right-0 w-96 h-96 lg:w-[600px] lg:h-[600px] transform translate-x-1/2 -translate-y-1/2">
      <div class="w-full h-full luxury-gradient rounded-full opacity-10 animate-pulse-slow"></div>
    </div>
    
    <!-- セカンダリパターン -->
    <div class="absolute bottom-0 left-0 w-64 h-64 lg:w-96 lg:h-96 transform -translate-x-1/2 translate-y-1/2">
      <div class="w-full h-full bg-gradient-to-br from-secondary to-accent rounded-full opacity-10 animate-pulse-slow" style="animation-delay: 1.5s;"></div>
    </div>
    
    <!-- アクセントパターン -->
    <div class="absolute top-1/2 left-1/2 w-32 h-32 lg:w-48 lg:h-48 transform -translate-x-1/2 -translate-y-1/2">
      <div class="w-full h-full bg-gradient-to-br from-accent to-primary rounded-full opacity-15 animate-float"></div>
    </div>
  </div>

  <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20 lg:py-32">
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-20 items-center">
      
      <!-- 左側：コンテンツエリア -->
      <div class="text-center lg:text-left space-y-8">
        
        <!-- メインキャッチコピー -->
        <div class="space-y-6">
          <h1 class="text-4xl sm:text-5xl lg:text-6xl xl:text-7xl font-bold leading-tight">
            <span class="gradient-text">{content.catchphrase}</span>
          </h1>
          
          <p class="text-lg sm:text-xl lg:text-2xl text-base-content/80 leading-relaxed max-w-2xl mx-auto lg:mx-0">
            {content.subcopy}
          </p>
        </div>

        <!-- CTAボタン群 -->
        <div class="flex flex-col sm:flex-row items-center justify-center lg:justify-start gap-4 sm:gap-6">
          <a 
            href="#contact" 
            class="btn btn-primary btn-lg px-8 py-4 rounded-2xl shadow-lg hover:shadow-glow hover:scale-105 transform transition-all duration-300 w-full sm:w-auto"
          >
            <span>{content.cta_main}</span>
            <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </a>
          
          <a 
            href={priceLink} 
            class="btn btn-outline btn-lg px-8 py-4 rounded-2xl w-full sm:w-auto"
          >
            <span>{content.cta_sub}</span>
            <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>

        <!-- 特徴リスト -->
        <div class="flex flex-wrap justify-center lg:justify-start items-center gap-4 sm:gap-6 text-sm sm:text-base text-base-content/70">
          {content.features.map(feature => (
            <div class="badge badge-primary badge-lg glass-effect">
              <div class="w-2 h-2 bg-accent rounded-full animate-pulse mr-2"></div>
              <span class="font-medium">{feature}</span>
            </div>
          ))}
        </div>
      </div>

      <!-- 右側：ビジュアルエリア -->
      <div class="relative">
        
        <!-- メインビジュアルカード -->
        <div class="card premium-shadow group">
          <div class="card-body p-0">
            <!-- 画像エリア -->
            <figure class="aspect-[4/3] lg:aspect-[3/2] relative overflow-hidden">
              <img 
                src="https://images.unsplash.com/photo-1551434678-e076c223a692?q=80&w=2070&auto=format&fit=crop" 
                alt="プロフェッショナルなWeb制作サービスのイメージ"
                class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
              />
              
              <!-- オーバーレイグラデーション -->
              <div class="absolute inset-0 bg-gradient-to-t from-base-content/30 via-transparent to-transparent"></div>
              
              <!-- フローティングバッジ -->
              <div class="absolute top-6 right-6 badge badge-accent badge-lg glass-effect">
                <div class="w-2 h-2 bg-success rounded-full animate-pulse mr-2"></div>
                <span class="font-semibold">実績多数</span>
              </div>
            </figure>
            
            <!-- コンテンツエリア -->
            <div class="card-body p-6 lg:p-8">
              <div class="space-y-4">
                <h3 class="card-title text-xl lg:text-2xl">
                  完全オーダーメイド
                </h3>
                <p class="text-base-content/70 leading-relaxed">
                  テンプレートを使わない、あなたのお店だけのオリジナルデザインを制作します。
                </p>
                
                <!-- 統計情報 -->
                <div class="stats stats-horizontal shadow-sm">
                  <div class="stat">
                    <div class="stat-value text-primary">100+</div>
                    <div class="stat-desc">制作実績</div>
                  </div>
                  <div class="stat">
                    <div class="stat-value text-secondary">98%</div>
                    <div class="stat-desc">満足度</div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- フローティング要素 -->
        <div class="absolute -top-4 -left-4 w-16 h-16 bg-gradient-to-br from-secondary to-primary rounded-2xl shadow-lg animate-float opacity-80"></div>
        <div class="absolute -bottom-4 -right-4 w-12 h-12 bg-gradient-to-br from-accent to-secondary rounded-xl shadow-lg animate-float opacity-80" style="animation-delay: 2s;"></div>
      </div>
    </div>
  </div>

  <!-- スクロールインジケーター -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
    <div class="w-6 h-10 border-2 border-primary/30 rounded-full flex justify-center">
      <div class="w-1 h-3 bg-primary rounded-full mt-2 animate-pulse"></div>
    </div>
  </div>
</section>

<script>
  // スクロールアニメーション
  document.addEventListener('DOMContentLoaded', () => {
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('animate-fade-in-up');
        }
      });
    }, observerOptions);

    // アニメーション対象の要素を監視
    const animatedElements = document.querySelectorAll('.animate-on-scroll');
    animatedElements.forEach(el => observer.observe(el));
  });
</script>
