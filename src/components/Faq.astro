---
const { content } = Astro.props;
const eyebrow = content?.eyebrow ?? 'FAQ';
---

<section class="relative overflow-hidden bg-neutral-50 py-24 sm:py-28 lg:py-32">
  <div class="pointer-events-none absolute inset-0">
    <div class="absolute left-[18%] top-[16%] h-48 w-48 rounded-full bg-primary/15 blur-[120px]"></div>
    <div class="absolute right-[18%] bottom-[20%] h-56 w-56 rounded-full bg-secondary/15 blur-[140px]"></div>
  </div>

  <div class="relative mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
    <div class="grid gap-12 lg:grid-cols-[1fr_1.5fr] lg:items-start">
      <div class="space-y-8 rounded-[2.5rem] border border-neutral-200 bg-white/90 p-8 shadow-strong backdrop-blur lg:p-12">
        <div class="space-y-4">
          <div class="inline-flex items-center gap-2 rounded-full border border-primary/30 bg-primary/10 px-4 py-2 text-xs font-semibold uppercase tracking-[0.36em] text-primary-600">
            {eyebrow}
          </div>
          <h2 class="text-3xl font-bold tracking-tight text-neutral-900 sm:text-4xl">
            {content.title}
          </h2>
          <p class="text-lg leading-relaxed text-neutral-600">
            {content.subtitle}
          </p>
        </div>

        <div class="rounded-3xl border border-neutral-200 bg-neutral-900/90 p-6 text-white shadow-subtle">
          <p class="text-xs font-semibold uppercase tracking-[0.32em] text-primary-200">
            Concierge Support
          </p>
          <p class="mt-3 text-lg font-semibold text-white">
            info@omiseweb.com
          </p>
          <p class="mt-1 text-sm text-white/70">
            平日 10:00 - 18:00（日本時間） / 多言語サポート対応
          </p>
          <a
            href="#contact"
            class="mt-6 inline-flex items-center gap-3 rounded-2xl border border-primary/40 bg-primary/20 px-5 py-3 text-xs font-semibold uppercase tracking-[0.32em] text-primary-100 transition duration-300 hover:border-primary/60 hover:bg-primary/30"
          >
            無料コンサルティングを予約する
            <svg class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>

        <div class="grid gap-4 md:grid-cols-2">
          <div class="rounded-2xl border border-neutral-200 bg-white/90 p-4 text-sm text-neutral-600 shadow-subtle">
            <p class="text-xs uppercase tracking-[0.32em] text-neutral-400">Languages</p>
            <p class="mt-2 font-semibold text-neutral-900">日本語 / English / 中文 / ภาษาไทย</p>
          </div>
          <div class="rounded-2xl border border-neutral-200 bg-white/90 p-4 text-sm text-neutral-600 shadow-subtle">
            <p class="text-xs uppercase tracking-[0.32em] text-neutral-400">平均回答時間</p>
            <p class="mt-2 font-semibold text-neutral-900">24時間以内</p>
          </div>
        </div>
      </div>

      <div class="space-y-4">
        {content.faqs.map((faq, index) => (
          <details class="group overflow-hidden rounded-[1.75rem] border border-neutral-200 bg-white/80 p-6 shadow-subtle transition duration-300 hover:border-primary/30 hover:shadow-strong open:border-primary/40 open:shadow-strong [&_summary::-webkit-details-marker]:hidden">
            <summary class="flex cursor-pointer items-start gap-4 text-left text-neutral-900">
              <span class="mt-1 flex h-8 w-8 items-center justify-center rounded-2xl border border-primary/40 bg-primary/10 text-xs font-semibold uppercase tracking-[0.32em] text-primary-600">
                {String(index + 1).padStart(2, '0')}
              </span>
              <div class="flex-1">
                <h3 class="text-lg font-semibold leading-tight">{faq.q}</h3>
                <div class="mt-2 hidden text-sm uppercase tracking-[0.28em] text-primary-500 group-open:block">
                  Insight
                </div>
              </div>
              <span class="relative h-6 w-6 shrink-0 text-neutral-400 transition duration-300 group-open:text-primary-500">
                <svg
                  class="absolute inset-0 h-6 w-6 opacity-100 transition duration-300 group-open:opacity-0"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="1.5"
                >
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v12m6-6H6"></path>
                </svg>
                <svg
                  class="absolute inset-0 h-6 w-6 opacity-0 transition duration-300 group-open:opacity-100"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="1.5"
                >
                  <path stroke-linecap="round" stroke-linejoin="round" d="M18 12H6"></path>
                </svg>
              </span>
            </summary>
            <div class="mt-4 border-t border-neutral-100 pt-4 text-base leading-relaxed text-neutral-600">
              <p>{faq.a}</p>
            </div>
          </details>
        ))}
      </div>
    </div>
  </div>
</section>
