---
// Header Component with language switcher
const languages = [
    { code: 'jp', name: '日本語', href: '/' },
    { code: 'en', name: 'EN', href: '/en/' },
    { code: 'zh', name: '中文', href: '/zh/' },
    { code: 'th', name: 'ไทย', href: '/th/' },
];
---
<header class="bg-white/80 backdrop-blur-md sticky top-0 z-50 shadow-sm">
  <div class="max-w-7xl mx-auto px-6">
    <div class="flex justify-between items-center h-20">
      <div class="flex-shrink-0">
        <a href="/" class="text-2xl font-bold text-indigo-600">
          Omiseweb
        </a>
      </div>
      <nav class="hidden md:flex items-center space-x-8">
        <a href="/about" class="text-slate-600 hover:text-indigo-600 transition-colors">私たちについて</a>
        <a href="#works" class="text-slate-600 hover:text-indigo-600 transition-colors">制作事例</a>
        <a href="#process" class="text-slate-600 hover:text-indigo-600 transition-colors">料金</a>
        <a href="/blog" class="text-slate-600 hover:text-indigo-600 transition-colors">ブログ</a>
      </nav>
      <div class="flex items-center space-x-4">
        <div class="flex items-center space-x-2 text-sm">
          {languages.map(lang => (
            <a href={lang.href} class="text-slate-500 hover:text-indigo-600 font-medium transition-colors">{lang.name}</a>
          ))}
        </div>
        <a href="#contact" class="hidden sm:inline-block bg-indigo-600 text-white font-semibold px-5 py-2 rounded-full hover:bg-indigo-700 transition-colors">
          無料で相談する
        </a>
        <button id="mobile-menu-button" class="md:hidden p-2 rounded-md text-slate-600 hover:bg-slate-100">
            <svg class="w-6 h-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
            </svg>
        </button>
      </div>
    </div>
  </div>
  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden md:hidden bg-white border-t border-slate-200">
    <nav class="flex flex-col p-4 space-y-2">
      <a href="/about" class="block px-4 py-2 rounded-md text-slate-600 hover:bg-slate-100 hover:text-indigo-600">私たちについて</a>
      <a href="#works" class="block px-4 py-2 rounded-md text-slate-600 hover:bg-slate-100 hover:text-indigo-600">制作事例</a>
      <a href="#process" class="block px-4 py-2 rounded-md text-slate-600 hover:bg-slate-100 hover:text-indigo-600">料金</a>
      <a href="/blog" class="block px-4 py-2 rounded-md text-slate-600 hover:bg-slate-100 hover:text-indigo-600">ブログ</a>
      <a href="#contact" class="block px-4 py-2 rounded-md bg-indigo-600 text-white text-center font-semibold">無料で相談する</a>
    </nav>
  </div>
</header>

<script>
  const menuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  menuButton.addEventListener('click', () => {
    mobileMenu.classList.toggle('hidden');
  });
</script>
