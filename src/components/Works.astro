---
const { content } = Astro.props;
---
<section id="works" class="py-20 sm:py-24 bg-slate-50">
  <div class="max-w-7xl mx-auto px-6">
    <div class="text-center">
        <h2 class="text-3xl font-bold tracking-tight text-slate-900 sm:text-4xl">{content.title}</h2>
        <p class="mt-4 text-lg leading-8 text-slate-600">{content.subtitle}</p>
    </div>

    <div class="swiper works-swiper mt-12">
        <div class="swiper-wrapper py-4">
            {content.cases.map(work => (
                <div class="swiper-slide group">
                    <div class="relative overflow-hidden rounded-xl h-full shadow-lg">
                        <img src={work.image} alt={work.name} class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105" style="min-height: 400px;" />
                        <div class="absolute inset-0 bg-gradient-to-t from-black/80 to-transparent"></div>
                        <div class="absolute bottom-0 left-0 p-6 w-full">
                            <h3 class="text-xl font-bold text-white">{work.name}</h3>
                            <div class="mt-4 max-h-0 opacity-0 group-hover:max-h-40 group-hover:opacity-100 transition-all duration-500 overflow-hidden">
                                <p class="text-sm text-slate-300"><strong class="font-semibold text-amber-400">Before:</strong> {work.before}</p>
                                <p class="mt-2 text-sm text-slate-200"><strong class="font-semibold text-green-400">After:</strong> {work.after}</p>
                            </div>
                        </div>
                    </div>
                </div>
            ))}
        </div>
        <div class="swiper-pagination works-pagination"></div>
    </div>

    <div class="mt-12 text-center">
      <a href="/works" class="rounded-md bg-indigo-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">
        {content.buttonText}
      </a>
    </div>
  </div>
</section>