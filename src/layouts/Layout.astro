---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description?: string;
  headerContent?: Record<string, any>;
  footerContent?: Record<string, any>;
}

const {
  title,
  description = '',
  headerContent = {},
  footerContent = {},
} = Astro.props;
---
<!doctype html>
<html lang="ja" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&family=Noto+Sans+JP:wght@400;500;700;900&family=Playfair+Display:wght@700;800;900&display=swap" rel="stylesheet">
    <title>{title}</title>
  </head>
  <body class="bg-neutral-50 text-neutral-900 font-body antialiased">
    <Header content={headerContent} />
    <main>
      <slot />
    </main>
    <Footer content={footerContent} />
   
   <style is:global>
      /* デザインブラッシュアップ：
        権威性とデザインの一貫性のため、h1-h6タグに自動的に見出し用フォントを適用します。
        Tailwindの 'font-heading' ユーティリティクラスを適用。
      */
      h1, h2, h3, h4, h5, h6 {
        @apply font-heading;
      }
    </style>
  </body>
</html>
