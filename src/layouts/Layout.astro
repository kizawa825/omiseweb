---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description?: string;
  headerContent?: Record<string, any>;
  footerContent?: Record<string, any>;
}

const {
  title,
  description = '',
  headerContent = {},
  footerContent = {},
} = Astro.props;
---
<!doctype html>
<html lang="ja" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- 2025年最新のフォント最適化 -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&family=Noto+Sans+JP:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    
    <!-- パフォーマンス最適化 -->
    <link rel="dns-prefetch" href="//images.unsplash.com">
    
    <title>{title}</title>
  </head>
  <body class="bg-neutral-50 text-neutral-900 font-body antialiased selection:bg-primary-100 selection:text-primary-900">
    <!-- 2025年トレンドのスムーズスクロールとアクセシビリティ -->
    <div id="app" class="min-h-screen flex flex-col">
      <Header content={headerContent} />
      <main class="flex-1">
        <slot />
      </main>
      <Footer content={footerContent} />
    </div>
   
   <style is:global>
      /* 2025年最新のデザインシステム */
      
      /* スムーズスクロール */
      html {
        scroll-behavior: smooth;
      }
      
      /* 見出しの統一スタイル */
      h1, h2, h3, h4, h5, h6 {
        @apply font-heading font-semibold tracking-tight;
      }
      
      h1 {
        @apply text-4xl sm:text-5xl lg:text-6xl xl:text-7xl;
      }
      
      h2 {
        @apply text-3xl sm:text-4xl lg:text-5xl;
      }
      
      h3 {
        @apply text-2xl sm:text-3xl lg:text-4xl;
      }
      
      h4 {
        @apply text-xl sm:text-2xl lg:text-3xl;
      }
      
      h5 {
        @apply text-lg sm:text-xl lg:text-2xl;
      }
      
      h6 {
        @apply text-base sm:text-lg lg:text-xl;
      }
      
      /* リンクのスタイル */
      a {
        @apply transition-all duration-300 ease-in-out;
      }
      
      /* ボタンのベーススタイル */
      .btn {
        @apply inline-flex items-center justify-center px-6 py-3 text-base font-semibold rounded-xl transition-all duration-300 ease-in-out transform focus:outline-none focus:ring-2 focus:ring-offset-2;
      }
      
      .btn-primary {
        @apply bg-gradient-primary text-white shadow-lg hover:shadow-glow hover:scale-105 focus:ring-primary-500;
      }
      
      .btn-secondary {
        @apply bg-gradient-secondary text-white shadow-lg hover:shadow-glow-secondary hover:scale-105 focus:ring-secondary-500;
      }
      
      .btn-outline {
        @apply border-2 border-primary-600 text-primary-600 hover:bg-primary-600 hover:text-white focus:ring-primary-500;
      }
      
      /* カードのベーススタイル */
      .card {
        @apply bg-white rounded-2xl shadow-normal hover:shadow-strong transition-all duration-300 ease-in-out;
      }
      
      /* グラデーションテキスト */
      .gradient-text {
        @apply bg-gradient-primary bg-clip-text text-transparent;
      }
      
      /* アニメーション用のユーティリティ */
      .animate-on-scroll {
        @apply opacity-0 translate-y-8 transition-all duration-700 ease-out;
      }
      
      .animate-on-scroll.visible {
        @apply opacity-100 translate-y-0;
      }
      
      /* カスタムスクロールバー */
      ::-webkit-scrollbar {
        width: 8px;
      }
      
      ::-webkit-scrollbar-track {
        @apply bg-neutral-100;
      }
      
      ::-webkit-scrollbar-thumb {
        @apply bg-neutral-300 rounded-full;
      }
      
      ::-webkit-scrollbar-thumb:hover {
        @apply bg-neutral-400;
      }
      
      /* フォーカス表示の改善 */
      *:focus {
        @apply outline-none ring-2 ring-primary-500 ring-offset-2;
      }
      
      /* 選択時のスタイル */
      ::selection {
        @apply bg-primary-100 text-primary-900;
      }
      
      /* ダークモード対応の準備 */
      @media (prefers-color-scheme: dark) {
        .dark-mode {
          @apply bg-neutral-900 text-neutral-100;
        }
      }
      
      /* モバイルファーストのレスポンシブタイポグラフィ */
      @media (max-width: 640px) {
        h1 {
          @apply text-3xl;
        }
        h2 {
          @apply text-2xl;
        }
        h3 {
          @apply text-xl;
        }
      }
    </style>
  </body>
</html>
